<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Adinata (dieend)"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solved: "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/num_solved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="139"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", Submissions: "
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/num_submission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33`"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <TextView
        	android:id="@+id/solved_problems"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="100 101 102 103"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Tried but not yet solved: "
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
	        android:id="@+id/fail_solve_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="11"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>


    <TextView
        android:id="@+id/failed_problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="104 340 439"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
